<table class="table">
  <thead>
    <tr>
      <th>
        <%= t("backoffice.name") %>
      </th>
      <th>
        <%= t("backoffice.account_owner") %>
      </th>
      <th>
        <%= t("backoffice.account_users") %>
      </th>
      <th>
        <%= t("backoffice.projects") %>
      </th>
      <th>
        <%= t("backoffice.language") %>
      </th>
      <th>
        <%= t("backoffice.status") %>
      </th>
      <th>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @project_developers.each do |pd| %>
      <tr>
        <td><%= pd.name %></td>
        <td><%= pd.account.owner.full_name %></td>
        <td><%= pd.account.users.count + 1 %></td>
        <td><%= pd.projects.count %></td>
        <td><%= pd.language %></td>
        <td><%= pd.account.review_status %></td>
        <td>
          <%= button_to t("backoffice.approve"), approve_backoffice_account_path(pd.account.id), class: "link-button", method: :post unless pd.account.approved? %>
          <%= button_to t("backoffice.reject"), reject_backoffice_account_path(pd.account.id), class: "link-button", method: :post unless pd.account.rejected? %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
