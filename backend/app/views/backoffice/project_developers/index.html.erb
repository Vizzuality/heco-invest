<table class="table">
  <thead>
    <tr>
      <th>
        Name
      </th>
      <th>
        Account owner
      </th>
      <th>
        Account users
      </th>
      <th>
        Projects
      </th>
      <th>
        Language
      </th>
      <th>
        Status
      </th>
      <th>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @project_developers.each do |pd| %>
      <tr>
        <td><%= pd.name %></td>
        <td><%= pd.account.owner.full_name %></td>
        <td><%= pd.account.users.count + 1 %></td>
        <td><%= pd.projects.count %></td>
        <td><%= pd.language %></td>
        <td><%= pd.account.review_status %></td>
        <td>
          <%= button_to "Approve", approve_backoffice_account_path(pd.account.id), class: "link-button", method: :post unless pd.account.approved? %>
          <%= button_to "Reject", reject_backoffice_account_path(pd.account.id), class: "link-button", method: :post unless pd.account.rejected? %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
