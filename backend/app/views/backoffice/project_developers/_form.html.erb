<div class="w-full bg-white rounded-t-xl p-6">
  <%= simple_form_for [:backoffice, project_developer] do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <h2 class="mb-4 mt-6 text-gray-600 font-semibold text-xl">General</h2>

    <%= f.simple_fields_for :account do |ff|  %>
      <%= ff.input :picture %>
    <% end %>
    <div class="grid grid-cols-2 gap-4">
      <%= f.simple_fields_for :account do |ff|  %>
        <%= ff.input :name, as: :string %>
      <% end %>
      <%= f.input :project_developer_type, collection: ProjectDeveloperType.all %>
    </div>
    <%= f.input :entity_legal_registration_number %>

    <%= render "account_fields", f: f %>

    <h2 class="mb-4 mt-6 text-gray-600 font-semibold text-xl">About the work</h2>

    <%= f.input :categories, as: :check_boxes, collection: Category.all %>
    <%= f.input :impacts, as: :check_boxes, collection: Impact.all %>
    <%= f.input :mosaics, as: :check_boxes, collection: Mosaic.all %>

    <div class="mt-3 flex justify-end gap-3">
      <%= link_to t("backoffice.common.cancel"), :back, class: "button button-secondary-green" %>
      <%= f.button :submit, t("backoffice.common.save"), class: "button button-primary-green" %>
    </div>
  <% end %>
</div>
